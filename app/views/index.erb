      <li class="nav-item">
        <i class="icon ri-home-6-line"></i>
        <span class="text">Work</i></span>
      </li>
      <li class="nav-item">
        <i class="icon ri-notification-3-line"></i>
        <span class="text">School</i></span>
      </li>
      <li class="nav-item">
        <i class="icon ri-message-3-line"></i>
        <span class="text"
          >Facebookerist</i
        ></span>
      </li>
      <li class="nav-item">
        <i onclick="togglePopup('#new')" class="icon ri-add-circle-line" title="New Timer"></i>
      </li>
    </ul>
  </div>
  <ul class="timer-list">
